<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:layout_centerInParent="true"
    android:padding="@dimen/margin_8"
    android:background="@color/lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/box_qa_white_bg"
        android:layout_marginStart="50dp"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:id="@+id/tvHotelName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_16"
            android:padding="@dimen/margin_8"/>

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:id="@+id/tvStampValue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_8" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgStamp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_white"
        android:padding="@dimen/margin_8"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/img_decscription"/>

</RelativeLayout>