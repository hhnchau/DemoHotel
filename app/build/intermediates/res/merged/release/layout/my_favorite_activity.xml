<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/my_favorite"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/wh"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:text="@string/favorite_area"
            android:textColor="@color/bk"
            android:textSize="18sp" />
        <!--<ImageView-->
        <!--android:id="@+id/btnEdit"-->
        <!--android:layout_width="108dp"-->
        <!--android:adjustViewBounds="false"-->
        <!--android:scaleType="fitEnd"-->
        <!--android:paddingTop="5dp"-->
        <!--android:paddingBottom="5dp"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:layout_height="36dp"-->
        <!--android:src="@drawable/edit" />-->
        <com.appromobile.hotel.widgets.TextViewSFBold
            android:id="@+id/btnEdit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/button_full_wh_bg_org_border"
            android:gravity="center"
            android:text="@string/txt_3_5_edit"
            android:textColor="@color/org"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvFavoriteArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:divider="@color/wh"
        android:dividerHeight="1dp"
        android:scrollbars="none" />
    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/txtSetFavArea"
        android:text="@string/set_my_favorite_area"/>
    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/wh"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="@string/favorite_hotel"
        android:textColor="@color/bk"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvFavoriteHotel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"
        android:scrollbars="none" />

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:textSize="15sp"
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/you_dont_have_any_favorite_hotel"
        android:visibility="gone" />
</LinearLayout>