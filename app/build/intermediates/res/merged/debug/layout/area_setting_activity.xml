<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/area_setting"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/mapicon" />



        <!--<Spinner-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:spinnerMode="dropdown"-->
        <!--android:textAlignment="center" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bk"
            android:textSize="13sp"
            android:paddingLeft="24dp"
            android:layout_weight="1"
            android:text="@string/city_province" />
        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bk"
            android:textSize="13sp"
            android:gravity="right"
            android:paddingRight="24dp"
            android:layout_weight="1"
            android:text="@string/hotels" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lvProvinces"
            android:layout_width="120dp"
            android:dividerHeight="0dp"
            android:divider="@color/lg"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/lvHotelArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>