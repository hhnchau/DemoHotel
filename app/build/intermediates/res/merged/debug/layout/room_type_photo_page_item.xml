<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_6"
    android:orientation="vertical"
    android:id="@+id/boxDescription">

    <View
        android:id="@+id/line_des1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_6"
        android:background="@android:color/darker_gray" />

    <!--Room Name-->
    <com.appromobile.hotel.widgets.TextViewSFBold
        android:id="@+id/tvRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_semi_big" />

    <!--Square-->
    <com.appromobile.hotel.widgets.TextViewSFMedium
        android:id="@+id/tvRoomSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:maxLines="1"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_normal" />

    <!--Bed-->
    <com.appromobile.hotel.widgets.TextViewSFMedium
        android:id="@+id/tvRoomBed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:maxLines="1"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"

        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_normal" />

    <!--View-->
    <com.appromobile.hotel.widgets.TextViewSFMedium
        android:id="@+id/tvRoomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:maxLines="1"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"

        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_normal" />

    <!--Description-->
    <com.appromobile.hotel.widgets.TextViewSFMedium
        android:id="@+id/tvRoomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_normal" />

    <!--Other Promotion-->
    <com.appromobile.hotel.widgets.TextViewSFMedium
        android:id="@+id/tvRoomPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:textColor="@color/wh"
        android:textSize="@dimen/hotel_list_text_size_normal" />

    <!--Separate line-->
    <View
        android:id="@+id/line_des2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@android:color/darker_gray" />

    <include
        layout="@layout/price_room_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>