<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_splash_sale_room_type"
    android:layout_width="@dimen/img_flash_sale_width"
    android:layout_height="@dimen/img_flash_sale_height"
    android:alpha="0.6">

    <ImageView
        android:id="@+id/image_flash_sale_room_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <com.appromobile.hotel.widgets.TextViewSFBold
        android:id="@+id/text_flash_sale_room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_flash_sale_room_type"
        android:layout_alignEnd="@id/image_flash_sale_room_type"
        android:layout_alignLeft="@id/image_flash_sale_room_type"
        android:layout_alignRight="@id/image_flash_sale_room_type"
        android:layout_alignStart="@id/image_flash_sale_room_type"
        android:layout_alignTop="@id/image_flash_sale_room_type"
        android:layout_marginBottom="@dimen/flash_sale_margin_bottom"
        android:layout_marginLeft="@dimen/flash_sale_margin_left"
        android:layout_marginStart="@dimen/flash_sale_margin_left"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/flash_sale_text_size" />

</RelativeLayout>

