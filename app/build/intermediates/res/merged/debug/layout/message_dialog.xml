<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="1dp">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/box_red_bg"
            android:gravity="center"
            android:textColor="@color/org"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#f2f2f2"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/org"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/wh"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>