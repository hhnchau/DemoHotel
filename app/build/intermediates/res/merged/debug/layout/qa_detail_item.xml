<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/boxMyPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_qa_white_bg"
        android:minHeight="50dp"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvContentMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="asdfasf asofijasodifasofasofaos"
            android:textColor="#000000"
            android:textSize="13dp" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvDateMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="12dp"
            android:text="asdfasfdasfd"
            android:textColor="#000000"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boxYourPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_qa_org_bg"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvContentYour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="asdfsadfas asdfasdfasfdasfdas"
            android:textColor="@color/wh"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/wh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNickname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="asdfasdfasfd"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/wh"
                android:textSize="13sp" />
            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvDateYour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="12dp"
                android:text="asdfasdfasfd"
                android:textColor="@color/wh"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>