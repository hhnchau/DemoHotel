<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_3_9_reservation_successful_and_confirm_payment"
            android:textColor="@color/org"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/org"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/textView_booking_successful_paynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_16_pay_now"
            android:textColor="@color/wh"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/textView_booking_successful_paylater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_16_pay_later"
            android:textColor="@color/wh"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
