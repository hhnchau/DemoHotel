<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_50p">

    <LinearLayout
        android:id="@+id/cw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_32"
        android:layout_marginStart="@dimen/margin_32"
        android:background="@drawable/cardview_bg"
        android:orientation="vertical">

            <com.appromobile.hotel.widgets.TextViewSFHeavy
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:text="@string/verify_code_request" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:hint="@string/verify_code">

                <com.appromobile.hotel.widgets.EditTextSFRegular
                    android:id="@+id/edtVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="phone" />

            </android.support.design.widget.TextInputLayout>


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bk_50p" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.appromobile.hotel.widgets.TextViewSFBold
                        android:id="@+id/tvCance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_white_left_radius"
                        android:gravity="center"
                        android:text="@string/txt_7_2_resend"
                        android:textColor="@color/bk_85p"
                        android:textSize="15sp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="6000"
                        android:progress="6000"
                        android:progressDrawable="@drawable/progressbar_custom"
                        android:rotation="180" />
                </RelativeLayout>

                <Button
                    android:id="@+id/tvNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_org_right_radius"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/wh"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    <!--Close-->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/popup_btnClose"
        android:layout_height="@dimen/popup_btnClose"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cw"
        android:layout_marginTop="-15dp"
        android:background="@color/transparent"
        android:src="@drawable/close"
        android:contentDescription="@string/img_decscription" />

</RelativeLayout>
