<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/org"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="46dp"
        android:id="@+id/btnClose"
        android:paddingStart="6dp"
        android:paddingEnd="18dp"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:contentDescription="@string/img_decscription" />

    <com.appromobile.hotel.widgets.TextViewSFHeavy
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/wh"
        android:id="@+id/tvHotelTitle"
        android:maxLines="1"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_height="match_parent" />

    <!--Like-->
    <RelativeLayout
        android:id="@+id/btnLike"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/img_decscription"
            android:scaleType="fitCenter"
            android:src="@drawable/like" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvTotalLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:maxLength="2"
            android:textColor="@color/wh"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:padding="@dimen/margin_6"
        android:id="@+id/btnShare"
        android:src="@drawable/share"
        android:layout_height="match_parent"
        android:contentDescription="@string/img_decscription" />
</LinearLayout>