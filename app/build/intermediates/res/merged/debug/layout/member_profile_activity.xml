<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/member_profile"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.EditTextSFRegular
                    android:id="@+id/txtEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="@string/email"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/nick_name"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.appromobile.hotel.widgets.EditTextSFRegular
                        android:id="@+id/txtNickname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/wh"
                        android:gravity="center_vertical"
                        android:hint="@string/nick_name"
                        android:imeOptions="actionNext"
                        android:paddingLeft="6dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15sp">

                        <requestFocus />
                    </com.appromobile.hotel.widgets.EditTextSFRegular>

                    <com.appromobile.hotel.widgets.TextViewSFBold
                        android:id="@+id/btnCheckDuplicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/button_full_wh_bg_org_border"
                        android:padding="5dp"
                        android:text="@string/txt_7_2_check"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                    <!--<ImageView-->
                    <!--android:id="@+id/btnCheckDuplicate"-->
                    <!--android:layout_width="108dp"-->
                    <!--android:layout_height="36dp"-->
                    <!--android:layout_marginRight="12dp"-->
                    <!--android:adjustViewBounds="false"-->
                    <!--android:paddingBottom="5dp"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:scaleType="fitEnd"-->
                    <!--android:src="@drawable/check_text" />-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/gender"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"
                        android:text="@string/female"
                        android:textColor="@color/bk"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/chkFemale"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/checkbox_selected" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvMale"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical|right"
                        android:text="@string/male"
                        android:textColor="@color/bk"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/chkMale"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/checkbox" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/birthday"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvBirthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:hint="@string/date_format"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/address"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.EditTextSFRegular
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:hint="@string/optional"
                    android:imeOptions="actionNext"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/mobile"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.appromobile.hotel.widgets.EditTextSFRegular
                        android:id="@+id/txtMobile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/wh"
                        android:gravity="center_vertical"
                        android:hint="@string/required"
                        android:imeOptions="actionNext"
                        android:paddingLeft="6dp"
                        android:phoneNumber="true"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFBold
                        android:id="@+id/btnGetCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/org_button_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/get_code"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/verify_code"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.EditTextSFRegular
                    android:id="@+id/txtVerifyCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:hint="@string/required"
                    android:imeOptions="actionDone"
                    android:paddingLeft="6dp"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewInviteCode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/invite_code"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.EditTextSFRegular
                    android:id="@+id/txtInviteCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:hint="@string/optional"
                    android:imeOptions="actionDone"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/error_box_red_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Please input nick name"
        android:textColor="#ff0000"
        android:textSize="13sp"
        android:visibility="gone" />

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/btnOK"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/login_text_selector"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>