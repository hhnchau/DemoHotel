<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp">

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvDetailTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/terms_privacy_policy"
            android:textColor="@color/wh"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/btnCloseDetail"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:paddingBottom="10dp"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="0dp"
            android:paddingTop="8dp"
            android:src="@drawable/close_white"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <WebView
        android:id="@+id/webview_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/wh" />
</LinearLayout>