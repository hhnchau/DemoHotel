<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_decscription"
            android:paddingEnd="18dp"
            android:paddingStart="6dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/email_sign_up"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:background="@drawable/box_qa_white_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_16"
                android:paddingTop="@dimen/margin_16">

                <!--Email-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wh">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email">

                        <com.appromobile.hotel.widgets.EditTextSFRegular
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imgValidateEmail"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:contentDescription="@string/img_decscription"
                        android:src="@drawable/cancel"
                        android:visibility="gone" />

                </RelativeLayout>

                <!--Password-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wh">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password">

                        <com.appromobile.hotel.widgets.EditTextSFRegular
                            android:id="@+id/txtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"/>
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imgValidatePassword"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:contentDescription="@string/img_decscription"
                        android:src="@drawable/cancel"
                        android:visibility="gone" />

                </RelativeLayout>

                <!--Confirm-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wh">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password">

                        <com.appromobile.hotel.widgets.EditTextSFRegular
                            android:id="@+id/txtConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imgValidateConfirmPassword"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:contentDescription="@string/img_decscription"
                        android:src="@drawable/cancel"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/focus"
                    android:hint=""
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:inputType="none">
                    <requestFocus />
                </EditText>

                <!--Agreement-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/chkAgreement"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="6dp"
                        android:contentDescription="@string/img_decscription"
                        android:src="@drawable/checkbox" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.appromobile.hotel.widgets.TextViewSFRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/agree_service_policy"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_12" />

                        <View
                            android:id="@+id/lineAgree"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/lg" />

                        <com.appromobile.hotel.widgets.TextViewSFRegular
                            android:id="@+id/tvAgree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/please_agree_policy"
                            android:textColor="@color/org"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>

                <!--See Agreement-->
                <LinearLayout
                    android:id="@+id/btnGotoAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:gravity="center_vertical">

                    <!--Text Agreement-->
                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agree_service_policy_button"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12" />

                    <!--Icon Agreement-->
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/img_decscription"
                        android:src="@drawable/arrow_area_empty" />

                </LinearLayout>

            </LinearLayout>

            <!--Button Next-->
            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/margin_40"
                android:background="@drawable/btn_login_selector"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/login_text_selector"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <!--Sign-up With-->
            <LinearLayout
                android:id="@+id/boxSignUpWith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <!--Title Login-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/margin_64"
                        android:layout_height="1dp"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/bk_50p" />
                    <!--title-->
                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_6_15_sign_up_using"
                        android:textColor="@color/bk_50p"
                        android:textSize="@dimen/sp_18" />

                    <View
                        android:layout_width="@dimen/margin_64"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/bk_50p" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_24"
                    android:orientation="horizontal">
                    <!--Facebook-->
                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvSignUpFacebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:background="@drawable/ic_facebook"
                        android:gravity="center"
                        android:textColor="@color/wh" />

                    <!--Google +-->
                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvSignUpGooglePlus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/margin_4"
                        android:background="@drawable/ic_google_plus"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>