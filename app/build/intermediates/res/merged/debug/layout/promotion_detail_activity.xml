<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wh"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvScreenTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/promotion"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/promotion_detail_height"
                android:scaleType="fitXY" />

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="22dp"
                android:textColor="@color/org"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="22dp"
                android:background="@color/wh"
                android:orientation="vertical"
                android:paddingLeft="18sp">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/apply_period"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvTimePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linnear_coupon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/wh"
                android:orientation="vertical"
                android:paddingLeft="18sp">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/coupon_validity"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvCouponPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/lg" />

            <WebView
                android:id="@+id/wvContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="6dp"
                android:background="@color/wh"
                android:textColor="@color/bk"
                android:textSize="15sp">

            </WebView>
        </LinearLayout>
    </ScrollView>

    <com.appromobile.hotel.widgets.TextViewSFBold
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/org"
        android:gravity="center"
        android:text="@string/apply"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</LinearLayout>