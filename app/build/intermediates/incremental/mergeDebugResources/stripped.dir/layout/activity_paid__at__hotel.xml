<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_15p"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/imageView_pay_at_hotel_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/textView_pay_at_hotel_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Pay at Hotel"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/wh"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/txt_16_booking_information"
            android:textColor="@color/org"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/textView_pay_at_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/bk_15p"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/bk_15p" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/textView_pay_at_hotel_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/bk_15p"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/wh"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="@string/txt_16_total_title"
            android:textColor="@color/org"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_16_hotel_fee"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_pay_at_hotel_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/org"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_16_total_offer_discount"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_pay_at_hotel_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/org"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/textView_pay_at_hotel_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/org"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/txt_16_confirm"
        android:textColor="@color/wh"
        android:textSize="15sp" />

</LinearLayout>
