<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_red_bg"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:padding="10dp"
                android:src="@drawable/close" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/enter_your_passcode"
                android:textColor="@color/org"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtPasscode"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:textIsSelectable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/transparent"
                    android:background="@color/wh"
                    android:layout_centerHorizontal="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout">

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="invisible"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code2"
                            android:layout_width="12dp"
                            android:visibility="invisible"
                            android:layout_height="12dp"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code3"
                            android:layout_width="12dp"
                            android:visibility="invisible"
                            android:layout_height="12dp"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code4"
                            android:layout_width="12dp"
                            android:visibility="invisible"
                            android:layout_height="12dp"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code5"
                            android:layout_width="12dp"
                            android:visibility="invisible"
                            android:layout_height="12dp"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/code6"
                            android:layout_width="12dp"
                            android:visibility="invisible"
                            android:layout_height="12dp"
                            android:src="@drawable/circle_clicked_bg" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/org" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#f2f2f2"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/org"
                android:gravity="center"
                android:text="@string/yes"
                android:textColor="@color/wh"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>