<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnClose"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp">

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sort_org_bg"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/wh"
            android:textSize="18sp" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvFacebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/facebook"
            android:textColor="@color/wh"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvZalo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/zalo"
            android:textColor="@color/wh"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvViber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/viber"
            android:textColor="@color/wh"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvSkype"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/skype"
            android:textColor="@color/wh"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvSMS"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/sms"
            android:textColor="@color/wh"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>