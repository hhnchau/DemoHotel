<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnClose"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="34dp"
        android:paddingRight="34dp">

        <com.appromobile.hotel.widgets.TextViewSFBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_11_1_your_last_check_in"
            android:textColor="@color/wh"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/wh"
            android:orientation="vertical">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bk"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgHotel"
                android:layout_width="173dp"
                android:layout_height="115dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/loading_small" />

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/tvHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bk"
                android:textSize="18sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/org_10"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/txt_11_1_rate_the_hotel"
                android:textColor="@color/bk"
                android:textSize="14sp"
                android:id="@+id/textViewSFRegular3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/btnStar1"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/review_star" />

                <ImageView
                    android:id="@+id/btnStar2"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/review_star" />

                <ImageView
                    android:id="@+id/btnStar3"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/review_star" />

                <ImageView
                    android:id="@+id/btnStar4"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/review_star" />

                <ImageView
                    android:id="@+id/btnStar5"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/review_star" />
            </LinearLayout>

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/org_10"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/txt_11_1_feedback"
                android:textColor="@color/bk"
                android:textSize="14sp" />
            <com.appromobile.hotel.widgets.EditTextSFRegular
                android:id="@+id/txtContent"
                android:padding="@dimen/dp_12"
                android:gravity="top"
                android:hint="@string/content"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <com.appromobile.hotel.widgets.TextViewSFBold
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/org"
            android:gravity="center"
            android:text="@string/txt_11_1_submit"
            android:textColor="@color/wh"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>