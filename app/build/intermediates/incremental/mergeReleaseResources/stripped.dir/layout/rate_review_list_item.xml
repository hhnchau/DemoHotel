<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wh"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:id="@+id/boxMyReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/my_review"
            android:textColor="@color/bk"
            android:textSize="15dp" />

        <com.appromobile.hotel.widgets.TextViewSFBold
            android:id="@+id/btnEdit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_full_wh_bg_org_border"
            android:gravity="center"
            android:src="@drawable/edit"
            android:text="@string/txt_3_5_edit"
            android:textColor="@color/org" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="6dp">

            <ImageView
                android:id="@+id/btnStar1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/btnStar2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/btnStar3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/btnStar4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/btnStar5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/review_star" />
        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/id_text" />-->

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bk"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/org_15p"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvRoomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/bk"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/bk"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:padding="6dp"
            android:text=""
            android:textColor="@color/bk"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>