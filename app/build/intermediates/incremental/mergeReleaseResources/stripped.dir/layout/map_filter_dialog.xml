<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnClose"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="34dp"
        android:paddingRight="34dp">

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sort_org_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="@string/filters"
            android:textColor="@color/wh"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/btnAvailability"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/availability"
                android:textColor="@color/wh"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chkAvailability"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/radio_check_bg" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/labels"
            android:textColor="@color/wh"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <LinearLayout
            android:id="@+id/btnPromotion"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:text="@string/promotion"
                android:textColor="@color/wh"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chkPromotion"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/radio_check_bg" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <LinearLayout
            android:id="@+id/btnNew"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:text="@string/new_text"
                android:textColor="@color/wh"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chkNew"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/radio_check_bg" />
        </LinearLayout>

        <!--Hot Hotel-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <LinearLayout
            android:id="@+id/btnHot"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:text="@string/hot"
                android:textColor="@color/wh"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chkHot"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/radio_check_bg" />
        </LinearLayout>

        <!--Flash Sale-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wh" />

        <LinearLayout
            android:id="@+id/btnFlashSale"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:text="@string/txt_4_1_1_flashsale_label"
                android:textColor="@color/wh"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chkFlashSale"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="9dp"
                android:src="@drawable/radio_check_bg"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>