<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/wh" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44dp"
        android:background="@color/bk_85p" />
    <View
        android:layout_width="match_parent"
        android:background="@color/lg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_height="5dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/menu_bar_bottom" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="162dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!--<LinearLayout-->
                <!--android:id="@+id/btnQRScan"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="center_vertical|right"-->
                    <!--android:text="@string/txt_1_qrscan"-->
                    <!--android:textColor="#FFFFFF" />-->

                <!--<ImageView-->
                    <!--android:layout_width="52dp"-->
                    <!--android:layout_height="52dp"-->
                    <!--android:layout_marginTop="6dp"-->
                    <!--android:src="@drawable/qr" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/btnRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/txt_1_recent"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/recent" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnReportNewHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/create_new"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/floating_new" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/book_now"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/floating_book" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnQRScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/txt_1_qrscan"
                    android:textColor="#FFFFFF"
                    android:id="@+id/textView4" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/qr" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnCloseFloating"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/close" />
    </RelativeLayout>
</RelativeLayout>