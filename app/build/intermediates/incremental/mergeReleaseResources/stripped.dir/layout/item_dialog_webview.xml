<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_popup_webView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/padding_popup_main"
    android:layout_marginRight="@dimen/padding_popup_main">


    <LinearLayout
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_logo_webView"
            android:layout_width="@dimen/size_logo"
            android:layout_height="@dimen/size_logo"
            android:layout_gravity="center"
            android:padding="@dimen/padding_logo"
            android:visibility="gone" />
        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/popup_title_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_text"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_popup"
            android:background="@drawable/popup_btn_org"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
        <WebView
            android:id="@+id/popup_text_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wh"
            android:scrollbars="horizontal"
            android:gravity="center"
            android:padding="@dimen/padding_text"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_popup" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/popup_btn1_webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/popup_btn_gray"
                android:gravity="center"
                android:paddingTop="@dimen/padding_button"
                android:paddingBottom="@dimen/padding_button"
                android:textColor="#fff"
                android:textSize="@dimen/text_popup" />

            <View
                android:id="@+id/view_space_btn2_webView"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/popup_btn2_webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/popup_btn_gray"
                android:gravity="center"
                android:paddingTop="@dimen/padding_button"
                android:paddingBottom="@dimen/padding_button"
                android:textColor="#fff"
                android:textSize="@dimen/text_popup" />
            <View
                android:id="@+id/view_space_btn3_webView"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/popup_btn3_webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/popup_btn_gray"
                android:gravity="center"
                android:paddingTop="@dimen/padding_button"
                android:paddingBottom="@dimen/padding_button"
                android:textColor="#fff"
                android:textSize="@dimen/text_popup" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>