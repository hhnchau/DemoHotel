<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:orientation="vertical">

    <View
        android:id="@+id/relative_picker_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/wh"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK IN"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/org_20p" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK OUT"
                android:textColor="@color/org_20p" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/clock_circle_bg">

            <ImageView
                android:id="@+id/chkAPM"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/am" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/bk"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="240dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="239dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="239dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="239dp"
                android:layout_marginTop="190dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="190dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/tvNumber10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/org"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
