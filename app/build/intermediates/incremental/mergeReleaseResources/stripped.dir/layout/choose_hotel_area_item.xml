<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@color/wh"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:src="@drawable/hearth" />
    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/tvDistrictName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="District 1"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="13sp" />

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/tvTotalHotel"
        android:layout_width="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="(100)"
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="12dp"
        android:background="#00000000"
        android:src="@drawable/arrow_area" />
</LinearLayout>