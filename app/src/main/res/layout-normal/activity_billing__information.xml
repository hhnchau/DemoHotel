<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_15p"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/imageView_billing_infomation_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_decscription"
            android:paddingEnd="18dp"
            android:paddingStart="6dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/textView_billing_infomation_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/txt_16_billing_information"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@color/wh"
                android:orientation="vertical"
                android:padding="@dimen/margin_2">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_24"
                    android:text="@string/txt_16_total_title"
                    android:textColor="@color/org"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bk_15p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_16_hotel_fee"
                        android:textColor="@color/org"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/textView_billing_infomation_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bk_15p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_16_discount"
                        android:textColor="@color/org"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/textView_billing_infomation_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bk_15p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_6_12_stamp_value"
                        android:textColor="@color/org"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/textView_billing_infomation_stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bk_15p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_6_13_mileage_amount_value"
                        android:textColor="@color/org"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/textView_billing_infomation_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bk_15p" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_16_total_offer_discount"
                        android:textColor="@color/org"
                        android:textSize="15sp" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/textView_billing_infomation_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/org"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxPromotionPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/wh"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvPromotionPaymentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_16_hotel_fee"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvPromotionPaymentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:padding="@dimen/margin_16"
                android:text="@string/txt_16_confirm_your_payment_now"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="3">

                    <!--Pay at Hotel-->
                    <LinearLayout
                        android:id="@+id/linear_billing_infomation_pay_at_hotel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/wh"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="@string/img_decscription"
                            android:src="@drawable/pay_at_hotel" />

                        <com.appromobile.hotel.widgets.TextViewSFRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_16_pay_at_hotel"
                            android:textColor="@color/org"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!--123Pay-->
                    <LinearLayout
                        android:id="@+id/linear_billing_infomation_local_card"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@color/wh"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="@string/img_decscription"
                            android:src="@drawable/pay_123" />

                        <com.appromobile.hotel.widgets.TextViewSFRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/org"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!--Payoo-->
                    <LinearLayout
                        android:id="@+id/linear_billing_infomation_payoo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@color/wh"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="@string/img_decscription"
                            android:src="@drawable/payoo" />

                        <com.appromobile.hotel.widgets.TextViewSFRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/org"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgPromotionPayAtHotel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="95dp"
                    android:contentDescription="@string/img_decscription"
                    android:src="@drawable/promotion_payment"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgPromotionPay123"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="205dp"
                    android:contentDescription="@string/img_decscription"
                    android:src="@drawable/promotion_payment"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgPromotionPayoo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/img_decscription"
                    android:src="@drawable/promotion_payment"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

