<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/email_sign_up"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/wh"
            android:layout_height="49dp">

            <com.appromobile.hotel.widgets.EditTextSFRegular
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wh"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:textColor="#000000" />
            <!--<ImageView-->
                <!--android:id="@+id/btnCheckDuplicate"-->
                <!--android:layout_width="88dp"-->
                <!--android:layout_height="36dp"-->
                <!--android:adjustViewBounds="false"-->
                <!--android:scaleType="fitEnd"-->
                <!--android:paddingTop="5dp"-->
                <!--android:layout_marginRight="12dp"-->
                <!--android:paddingBottom="5dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/check_text" />-->

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/btnCheckDuplicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="@string/txt_7_2_check"
                android:textColor="@color/org"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:background="@drawable/button_full_wh_bg_org_border"
                android:padding="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/wh"
            android:layout_marginTop="5dp">

            <com.appromobile.hotel.widgets.EditTextSFRegular
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wh"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:paddingLeft="12dp"
                android:textSize="15sp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imgValidatePassword"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cancel"
                android:layout_marginRight="12dp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/wh"
            android:layout_marginTop="5dp">

            <com.appromobile.hotel.widgets.EditTextSFRegular
                android:id="@+id/txtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wh"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:paddingLeft="12dp"
                android:password="true"
                android:textSize="15sp"
                android:singleLine="true"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imgValidateConfirmPassword"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/cancel"
                android:visibility="visible" />
        </RelativeLayout>

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/error_box_red_bg"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:textColor="#ff0000" />

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvDisplayMessage"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/box_black_bg"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:textColor="@color/bk" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <!--<CheckBox-->
                <!--android:id="@+id/chkAgreement"-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:button="@drawable/checkbox_selector"-->
                <!--android:padding="10dp" />-->
            <ImageView
                android:id="@+id/chkAgreement"
                android:layout_width="32dp"
                android:layout_marginLeft="6dp"
                android:layout_height="32dp"
                android:src="@drawable/checkbox" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:text="@string/agree_service_policy"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGotoAgreement"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="@string/agree_service_policy_button"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/arrow_area_empty" />
        </LinearLayout>
    </LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/login_text_selector"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>