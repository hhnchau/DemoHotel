<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wh"
    android:orientation="vertical"
    android:gravity="center">

    <!--ViewPager-->

    <android.support.v4.view.ViewPager
        android:id="@+id/item_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/box_btn"
        android:background="@color/wh" />

    <!--Banner-->
    <RelativeLayout
        android:id="@+id/box_banner"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-15dp"
            android:contentDescription="@string/img_decscription"
            android:src="@drawable/introduce_bottom" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/indicator_item_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_banner"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" />

    <!--Button-->
    <LinearLayout
        android:id="@+id/box_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFBold
            android:id="@+id/tvStart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/btn_wh"
            android:gravity="center"
            android:text="@string/txt_6_15_skip"
            android:textColor="@color/org"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.TextViewSFBold
            android:id="@+id/tvSignup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/btn_org"
            android:gravity="center"
            android:text="@string/txt_6_15_sign_up"
            android:textColor="@color/wh"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>