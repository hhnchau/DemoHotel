<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Toolbar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/org"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/img_decscription"
                    android:paddingEnd="18dp"
                    android:paddingStart="6dp"
                    android:src="@drawable/back" />

                <com.appromobile.hotel.widgets.TextViewSFMedium
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/wh"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--Stamp Collection-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:background="@drawable/box_qa_white_bg"
                android:orientation="horizontal"
                android:padding="@dimen/margin_12">

                <com.appromobile.hotel.widgets.TextViewSFMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_6_12_stamp_collection" />

                <com.appromobile.hotel.widgets.TextViewSFMedium
                    android:id="@+id/tvNumStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Point Collection-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="@dimen/margin_12"
                android:background="@drawable/box_qa_white_bg"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8"
                android:weightSum="10">

                <!--Stamp1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgStamp1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/img_decscription" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvStamp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <!--Stamp2-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgStamp2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/img_decscription" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvStamp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <!--Stamp3-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgStamp3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/img_decscription" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvStamp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <!--Stamp4-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgStamp4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/img_decscription" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvStamp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <!--Stamp5-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgStamp5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/img_decscription" />

                    <com.appromobile.hotel.widgets.TextViewSFRegular
                        android:id="@+id/tvStamp5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

            </LinearLayout>

            <!--Value Stamp-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:background="@drawable/box_qa_white_bg"
                android:padding="@dimen/margin_12">

                <ImageView
                    android:id="@+id/imgIconStamp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/img_decscription" />

                <com.appromobile.hotel.widgets.TextViewSFHeavy
                    android:id="@+id/tvValueRedeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/org"
                    android:textSize="@dimen/hotel_list_text_size_biger" />

            </LinearLayout>

            <!--Terms of Use-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:background="@drawable/box_qa_white_bg"
                android:orientation="vertical"
                android:padding="@dimen/margin_12">

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvTermsOfuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.appromobile.hotel.widgets.TextViewSFHeavy
        android:id="@+id/btnRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_4"
        android:background="@drawable/box_qa_white_bg"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:text="@string/txt_6_12_stamp_redeem" />

</RelativeLayout>