<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <!--Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_decscription"
            android:paddingEnd="18dp"
            android:paddingStart="6dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/search_title"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <!--Input Search-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@drawable/cardview_rectangle"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.EditTextSFRegular
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/search_hint_text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/bk"
            android:textSize="@dimen/sp_16">

            <requestFocus />
        </com.appromobile.hotel.widgets.EditTextSFRegular>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/img_decscription"
            android:padding="@dimen/margin_12"
            android:src="@drawable/search_org" />

        <ImageView
            android:id="@+id/btnClear"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/img_decscription"
            android:padding="@dimen/margin_12"
            android:src="@drawable/ic_close"
            android:visibility="gone"/>

        <!--Progress-->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/margin_48"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxHeight="@dimen/margin_24"
            android:maxWidth="@dimen/margin_24"
            android:minHeight="@dimen/margin_16"
            android:minWidth="@dimen/margin_16"
            android:padding="@dimen/margin_12"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_12"
        android:scrollbars="none"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/view_no_result" />

        <ListView
            android:id="@+id/lvSearchHotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_12"
            android:background="@color/wh"
            android:divider="@drawable/listview_divider"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>