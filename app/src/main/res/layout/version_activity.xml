<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="12dp">

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/tvHotelTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/version"
            android:textColor="@color/wh"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingTop="8dp"
            android:src="@drawable/close_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boxInstalVersion"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvCurrentInstall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/bk" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/lg" />-->

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvLastVersion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/bk" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/lg" />-->
        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@color/login_text_selector"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/tvLastVersionMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textSize="15sp"
        android:textColor="@color/bk" />

</LinearLayout>