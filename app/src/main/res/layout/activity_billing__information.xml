<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_15p"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/imageView_billing_infomation_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingStart="6dp"
            android:paddingEnd="18dp"
            android:src="@drawable/back"
            android:contentDescription="@string/img_decscription" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:id="@+id/textView_billing_infomation_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/txt_16_billing_information"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/wh"
        android:orientation="vertical"
        android:padding="8dp">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/txt_16_total_title"
            android:textColor="@color/org"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_16_hotel_fee"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_billing_infomation_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/org"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_16_discount"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_billing_infomation_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/org"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_6_12_stamp_value"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_billing_infomation_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/org"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bk_15p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_16_total_offer_discount"
                android:textColor="@color/org"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:id="@+id/textView_billing_infomation_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/org"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/txt_16_confirm_your_payment_now"
        android:textColor="@color/org"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/linear_billing_infomation_pay_at_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@color/wh"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pay_at_hotel"
                android:contentDescription="@string/img_decscription" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_16_pay_at_hotel"
                android:textColor="@color/org"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_billing_infomation_local_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/wh"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pay_123"
                android:contentDescription="@string/img_decscription" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_16_local_card"
                android:textColor="@color/org"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

