<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:id="@+id/emptyView"
        android:layout_height="match_parent"
        android:background="@color/bk_50p"
        android:layout_above="@+id/box"/>

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="@color/wh"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:background="@color/lg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">


            <com.appromobile.hotel.widgets.TextViewSFHeavy
                android:id="@+id/tvHotelTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/choose_room_type"
                android:textColor="@color/bk"
                android:textSize="15sp" />
        </LinearLayout>
        <ListView
            android:id="@+id/lvRoom"
            android:background="@color/wh"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:divider="@color/lg"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>