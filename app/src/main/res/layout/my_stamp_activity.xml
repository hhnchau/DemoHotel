<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <!--Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_decscription"
            android:paddingEnd="18dp"
            android:paddingStart="6dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/txt_6_12_stamp"
            android:textColor="@color/wh"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:id="@+id/txtNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/txt_6_12_stamp_no"
            android:textColor="@color/org"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgNoData"
            android:layout_marginTop="4dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txtNoData"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_decscription"
            android:src="@drawable/icon_stamp_green" />

        <ListView
            android:id="@+id/lvStamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:divider="@color/lg"
            android:dividerHeight="1dp"
            android:scrollbars="none" />
    </RelativeLayout>

</LinearLayout>