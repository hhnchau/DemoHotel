<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/org"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="18dp"
            android:src="@drawable/back" />

        <com.appromobile.hotel.widgets.TextViewSFHeavy
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/report_a_new_hotel_title"
            android:textColor="@color/wh"
            android:textSize="19sp" />
    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="center"-->
    <!--android:text="@string/this_page_report_new_hotel_not_in_app" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/reporter"
            android:textColor="@color/bk"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/wh"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.EditTextSFRegular
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/wh"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/g"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFBold
                android:id="@+id/btnChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/button_full_wh_bg_org_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/change"
                android:textColor="@color/org"
                android:textSize="14sp" />

            <!--<ImageView-->
            <!--android:id="@+id/btnChange"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="46dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:adjustViewBounds="false"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingLeft="14dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:scaleType="fitEnd"-->
            <!--android:src="@drawable/change" />-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hotel_name"
            android:textColor="@color/bk"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.EditTextSFRegular
            android:id="@+id/txtHotelName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/wh"
            android:imeOptions="actionNext"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/g"
            android:textSize="15sp">

            <requestFocus />
        </com.appromobile.hotel.widgets.EditTextSFRegular>
    </LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFBold
        android:id="@+id/btnChooseLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_full_wh_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/choose_location"
        android:textColor="@color/org"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textColor="@color/bk"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.EditTextSFRegular
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/wh"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bk"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="3dp"
        android:background="@color/wh"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/city_province"
                android:textColor="@color/bk"
                android:textSize="15sp" />

            <com.appromobile.hotel.widgets.TextViewSFRegular
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/district"
                android:textColor="@color/bk"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/box_grey_border"
                android:orientation="horizontal"
                android:padding="1dp">

                <Spinner
                    android:id="@+id/spinProvince"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:spinnerMode="dialog"
                    android:visibility="invisible" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/g"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/combobox_down" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/box_grey_border"
                android:orientation="horizontal"
                android:padding="1dp">

                <Spinner
                    android:id="@+id/spinDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/wh"
                    android:gravity="center_vertical"
                    android:spinnerMode="dialog"
                    android:visibility="invisible" />

                <com.appromobile.hotel.widgets.TextViewSFRegular
                    android:id="@+id/tvDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/g"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/combobox_down" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="3dp"
        android:background="@color/wh"
        android:orientation="horizontal">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/lg"
            android:gravity="center_vertical"
            android:text="@string/telephone"
            android:textColor="@color/bk"
            android:textSize="15sp" />

        <com.appromobile.hotel.widgets.EditTextSFRegular
            android:id="@+id/txtPhoneCode"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/box_grey_border"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:maxLength="3"
            android:paddingLeft="12dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/g" />

        <com.appromobile.hotel.widgets.EditTextSFRegular
            android:id="@+id/txtPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/box_grey_border"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:maxLength="8"
            android:paddingLeft="12dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/g" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnChoosePhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.appromobile.hotel.widgets.TextViewSFRegular
            android:id="@+id/tvUploadImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/wh"
            android:gravity="top"
            android:padding="12dp"
            android:text="@string/upload_image"
            android:textColor="@color/g"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </LinearLayout>

    <com.appromobile.hotel.widgets.TextViewSFRegular
        android:id="@+id/btnReport"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="@string/report"
        android:textColor="@color/login_text_selector"
        android:textSize="18sp" />
</LinearLayout>