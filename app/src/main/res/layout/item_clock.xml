<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_85p"
    android:orientation="vertical"
    android:weightSum="3">

    <View
        android:id="@+id/dialog_clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/org"
        android:padding="@dimen/margin_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_clock_ok"
            android:layout_marginTop="@dimen/margin_12"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <ListView
                android:id="@+id/lv_from"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <ListView
                android:id="@+id/lv_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_48"
            android:layout_marginRight="@dimen/margin_48"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@drawable/box_qa_white_bg"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/margin_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:text="@string/time_from"
                    android:textSize="@dimen/sp_12" />

                <com.appromobile.hotel.widgets.TextViewSFHeavy
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_22" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <com.appromobile.hotel.widgets.TextViewSFMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:text="@string/time_to"
                    android:textSize="@dimen/sp_12" />

                <com.appromobile.hotel.widgets.TextViewSFHeavy
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_22" />

            </LinearLayout>

        </LinearLayout>

        <com.appromobile.hotel.widgets.TextViewSFMedium
            android:id="@+id/tv_clock_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/btn_login_selector"
            android:paddingBottom="@dimen/margin_4"
            android:paddingLeft="@dimen/margin_48"
            android:paddingRight="@dimen/margin_48"
            android:paddingTop="@dimen/margin_4"
            android:text="@string/ok"
            android:textColor="@color/org" />

    </RelativeLayout>

</LinearLayout>