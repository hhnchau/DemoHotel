<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/menu_bar_bottom" />
    <View
        android:layout_width="match_parent"
        android:background="@color/wh"
        android:layout_alignParentBottom="true"
        android:layout_height="44dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="32dp">

        <LinearLayout
            android:id="@+id/btnTab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:id="@+id/imgTab1"
                android:src="@drawable/home_icon_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:id="@+id/imgTab2"
                android:src="@drawable/map_icon_selector" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/btnTab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:id="@+id/imgTab3"
                android:layout_height="22dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/event_icon_selector" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btnTab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:id="@+id/imgTab4"
                android:layout_height="22dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/mypape_icon_selector" />

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/badge_notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-8dp"
                app:nbBackground="@drawable/badge_bg_with_shadow"
                app:nbMaxTextLength="2"/>
        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnFloatingButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_floating" />
</RelativeLayout>